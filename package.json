{
  "name": "__AppName",
  "version": "1.0.0",
  "description": "Roku awesome app",
  "author": "__Author",
  "scripts": {
    "build": "node  ./cicd/build.js -m PROD --project",
    "build:deploy": "node  ./cicd/build.js -m PROD -d --project",
    "build:package": "node  ./cicd/build.js -m PROD -d --package -f --project",
    "automation": "node  ./cicd/build.js -m AUTOMATION --project",
    "automation:deploy": "node  ./cicd/build.js -m AUTOMATION -d --project",
    "automation:package": "node  ./cicd/build.js -m AUTOMATION -d --package -f --project",
    "help": "node  ./cicd/build.js --help",
    "start": "node  ./cicd/build.js -m DEV -d --project",
    "start:debug": "node  ./cicd/build.js -m DEV -w -d --debug --project",
    "start:watch": "node  ./cicd/build.js -m DEV -w -d --project",
    "test": "node  ./cicd/build.js -m TEST -d --debug -t --project",
    "test:debug": "node  ./cicd/build.js -m TEST -d --debug --project",
    "test:watch": "node  ./cicd/build.js -m TEST -w -d --project",
    "release": "node  ./cicd/build.js -m RELEASE --project",
    "release:deploy": "node  ./cicd/build.js -m RELEASE -d --project",
    "release:package": "node  ./cicd/build.js -m RELEASE -d --package -f --project",
    "lint": "node ./cicd/lint.js",
    "cpd": "node ./cicd/cpd.js -m DEV --project",
    "deploy": "bash ./cicd/scripts/deploy.sh",
    "check:code-duplication": "node ./cicd/cpd.js --commit",
    "check:coding-style": "node ./cicd/lint.js",
    "postinstall": "cp ./cicd/device.tpl.json ./cicd/device.json && cp ./cicd/plugins/launch.json ./.vscode/launch.json",
    "function-coverage": "node ./cicd/report-unit-test.js -m TEST --project",
    "function-coverage:include-void": "node ./cicd/report-unit-test.js -m TEST --include-void --project"
  },
  "pre-commit": [
    "check:coding-style",
    "check:code-duplication"
  ],
  "dependencies": {
    "archiver": "^3.0.0",
    "cli-progress": "^2.1.1",
    "commander": "^2.19.0",
    "console-error": "0.0.4",
    "console-info": "0.0.5",
    "console-warn": "0.0.4",
    "eslint": "^5.12.1",
    "eslint-plugin-roku": "file:cicd/plugins/eslint-plugin-roku",
    "jscpd": "^2.0.13",
    "json2csv": "^4.3.3",
    "minimist": "^1.2.0",
    "node-watch": "^0.5.9",
    "pre-commit": "^1.2.2",
    "prompt": "^1.0.0",
    "recursive-copy": "^2.0.9",
    "replace-in-file": "^3.4.2",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "select-shell": "^1.1.2",
    "staged-git-files": "^1.1.2",
    "table": "^5.2.2",
    "telnet-stream": "^1.0.4",
    "xml2js": "^0.4.19"
  }
}
